<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#1976D2"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SBI CMS Kiosk Browser"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initializing Kiosk Mode..."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Required Permissions:\n• Display over other apps (for overlay)\n• Device Administrator (for kiosk mode)\n\nPlease grant all permissions when prompted."
        android:textColor="#E3F2FD"
        android:textSize="14sp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginBottom="32dp" />

    <!-- Debug/Manual Test Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_test_admin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Test Device Admin"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_force_limited"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Force Limited Mode"
            android:textSize="12sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>